{
  "name": "codecanvas",
  "publisher": "tupynambalucasdev",
  "displayName": "CodeCanvas",
  "description": "Freedoom",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "workspaces": [
    "themes"
  ],
  "categories": [
    "Other",
    "Themes"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "themes:build": "npm run build -w themes",
    "themes:dev": "npm run dev -w themes",
    "clean": "node -e \"const fs = require('fs'); ['out', 'dist'].forEach(p => fs.rmSync(p, { recursive: true, force: true }))\"",
    "vscode:prepublish": "npm run package",
    "compile": "npm run themes:build && npm run clean && npm run check-types && npm run lint && node esbuild.js",
    "package": "npm run themes:build && npm run clean && npm run check-types && npm run lint && node esbuild.js --production",
    "pretest": "npm run themes:build && npm run clean && npm run compile-tests && npm run compile && npm run lint",
    "watch": "npm run themes:build && npm run clean && npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch-tests": "tsc -p . -w --outDir out",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "contributes": {
    "commands": [
      {
        "command": "codecanvas.install",
        "title": "CodeCanvas: Install / Enable"
      },
      {
        "command": "codecanvas.uninstallPatch",
        "title": "CodeCanvas: Uninstall Patch"
      },
      {
        "command": "codecanvas.disable",
        "title": "CodeCanvas: Disable"
      },
      {
        "command": "codecanvas.info",
        "title": "CodeCanvas: Info"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeCanvas",
      "properties": {
        "codecanvas.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable CodeCanvas backgrounds."
        },
        "codecanvas.ui": {
          "type": "object",
          "default": {},
          "description": "Unified UI configuration for CodeCanvas."
        }
      }
    },
    "themes": [
      {
        "id": "codecanvas.bleach-yoruichi-dark-purple",
        "label": "Yoruichi (Bleach) - Dark Purple",
        "uiTheme": "vs-dark",
        "path": "./src/themes/anime.bleach.yoruichi.dark-purple.json"
      }
    ]
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "fast-glob": "^3.3.3",
    "stylis": "^4.3.6",
    "uglify-js": "^3.19.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@types/stylis": "^4.2.7",
    "@types/uglify-js": "^3.17.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "stylis": "^4.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "uglify-js": "^3.19.3"
  }
}